<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llHasHis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.leaf.library.widget.MyListView
                android:id="@+id/lvHis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="1px"
                >
            </com.leaf.library.widget.MyListView>
            <LinearLayout
                android:id="@+id/llClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
            <View
               style="@style/view_line"></View>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/item_back"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/clear_his"

                    />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="清除历史"
                     android:layout_marginLeft="5dp"
                     android:textSize="14sp"
                     android:textColor="@color/text_first_color"
                     />

            </LinearLayout>
                <View
                    style="@style/view_line"></View>
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/llNoHis"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text_first_color"
                android:text="您还没有搜素记录"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_sec_color"
                android:text="试试在上面的搜索框中输入您想要搜索"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/text_sec_color"
                android:text="的企业名字例如“阿里巴巴”"
                />

        </LinearLayout>

    </FrameLayout>
</LinearLayout>