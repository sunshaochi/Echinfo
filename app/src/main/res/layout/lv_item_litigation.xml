<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_back">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/fyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_first_color"
        android:text="青岛市黄岛区任命法院"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:src="@mipmap/qiyehao"/>

            <TextView
                android:id="@+id/qiyehao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（2013）上海号"
                android:textSize="12sp"
                android:textColor="@color/text_sec_color"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="12dp"
                android:layout_height="14dp"
                android:src="@mipmap/clock"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年3月11ri"
                android:textSize="12sp"
                android:textColor="@color/text_sec_color"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

    </RelativeLayout>
        <View
            style="@style/view_line"
            android:layout_marginTop="15dp"
            ></View>
    </LinearLayout>

    <ImageView
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:src="@mipmap/arrow_right" />




</RelativeLayout>
