<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/company"
            style="@style/tv_second"
            android:text="香港强悍信息科技有限公司"
            android:textColor="@color/text_first_color"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RatingBar
                android:id="@+id/rating"
                style="@style/mysRatingBar"
                android:rating="3" />

            <TextView
                android:id="@+id/number"
                style="@style/tv_third"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/iv_guanzhu"
                android:text="20"
                android:textColor="#ff5023"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/iv_guanzhu"
                style="@style/tv_third"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="个人"
                android:textColor="@color/text_sec_color"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>
    <View
        style="@style/view_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        ></View>
</LinearLayout>


